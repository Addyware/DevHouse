{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["DOM", "ESNext"],                // ✅ Added DOM here
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@/db/*": ["./src/db/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "react", "react-dom"], // ✅ Added react + react-dom
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
